import java.util.Scanner;
 
public class Main {
    public static void main(String[] args) {    
        
        int x;
        int sum = 0;
 
        Scanner sc = new Scanner(System.in);
        x = sc.nextInt();
        
        for(int i = 1; i <= x; i++)
        {
            sum = sum + i;
        }
 
        System.out.print(sum);
    }
}

// for문을 이용해서 1부터 x에 넣은 값까지 계속해서 더하는 1 + .. + x의 값을 구하는 간단한 문제
